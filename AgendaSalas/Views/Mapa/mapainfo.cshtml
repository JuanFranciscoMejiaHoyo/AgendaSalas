@section Scripts{
    <script>
        $(document).ready(function () {
            // Función para validar el formulario antes del envío
            $("form").submit(function (event) {
                var horaInicio = $('#horaInicio').val();
                var horaFinal = $('#horaFinal').val();

                // Convertir las horas en objetos Date para compararlas
                var fechaInicio = new Date('1970-01-01T' + horaInicio + 'Z');
                var fechaFinal = new Date('1970-01-01T' + horaFinal + 'Z');

                if (fechaInicio >= fechaFinal) {
                    alert('La hora de inicio debe ser menor que la hora de fin.');
                    event.preventDefault(); // Impedir que el formulario se envíe
                }
            });

            // Función para mostrar el modal al hacer clic en un botón
            function mostrarModal(target) {
                $(target).modal({ backdrop: 'static', keyboard: false });
                $(target).modal('show');
            }

            // Asignar la función mostrarModal al hacer clic en los botones de clase 'sala1', 'sala2', 'sala3'
            $('.sala1, .sala2, .sala3,.zc1').click(function () {
                var target = $(this).data('target');
                mostrarModal(target);
            });

            // Asignar automáticamente la fecha actual al campo con id 'fechaInicio'
            function asignarFechaActual(id) {
                var fecha = new Date();
                var mes = fecha.getMonth() + 1;
                var dia = fecha.getDate();
                var ano = fecha.getFullYear();
                if (dia < 10) dia = '0' + dia;
                if (mes < 10) mes = '0' + mes;
                document.getElementById(id).value = ano + "-" + mes + "-" + dia;
            }

            asignarFechaActual('fechaInicio');
            asignarFechaActual('fechaInicio2');
            asignarFechaActual('fechaInicio3');
            asignarFechaActual('fechaInicio4');



            $('#Sala01, #Sala02, #Sala03').on('hidden.bs.modal', function () {
                $(this).find('input[type="text"]').val('');
            });

            $(".checkin").change(function () {
                var targetDiv = $(this).closest('.modal').find('.fechaFinDiv');
                if ($(this).prop("checked")) {
                    targetDiv.slideDown(200);
                } else {
                    targetDiv.slideUp(200);
                }
            });

            $(".checkout").change(function () {
                var targetDiv = $(this).closest('.modal').find('.horaFinDiv');
                if ($(this).prop("checked")) {
                    targetDiv.slideUp(200);
                } else {
                    targetDiv.slideDown(200);
                }
            });


        });
    </script>

}


